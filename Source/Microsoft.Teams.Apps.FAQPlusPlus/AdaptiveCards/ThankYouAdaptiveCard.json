{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "%thankYouAdaptiveCardTitleText%",
          "separator": true,
          "color": "Attention"
        },
        {
          "type": "Image",
          "horizontalAlignment": "Center",
          "spacing": "small",
          "url": "%cardImageUrl%",
          "size": "large"
        },
        {
          "type": "TextBlock",
          "text": "%thankYouAdaptiveCardContent%",
          "spacing": "Medium",
          "wrap": true
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Created:",
              "value": "%todaysDate%"
            },
            {
              "title": "Closed:",
              "value": "%closedDate%"
            },
            {
              "title": "Status:",
              "value": "Open"
            }
          ]
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "%responseHeaderText%",
          "weight": "bolder",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "%questionLineText%",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "%answerLineText%",
          "wrap": true
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "%askAnExpertButtonText%",
      "card": {
        "type": "AdaptiveCard",
        "style": "emphasis",
        "body": [
          {
            "type": "TextBlock",
            "weight": "bolder",
            "text": "%titleText%",
            "wrap": true
          },
          {
            "type": "TextBlock",
            "weight": "default",
            "text": "%mandatoryFieldText%",
            "wrap": true,
            "color": "Attention"
          },
          {
            "type": "Input.Text",
            "placeholder": "%showCardTitleText%",
            "id": "questionUserTitleText",
            "isMultiline": false
          },
          {
            "type": "TextBlock",
            "weight": "bolder",
            "text": "%descriptionText%",
            "wrap": true
          },
          {
            "type": "Input.Text",
            "id": "questionForExpert",
            "placeholder": "%descriptionPlaceholder%",
            "isMultiline": true
          }

        ],
        "actions": [
          {
            "type": "Action.Submit",
            "title": "%submitButtonText%",
            "data": {
              "msteams": {
                "type": "messageBack",
                "displayText": "%askAnExpertDisplayText%",
                "text": "QuestionForExpert"
              },
              "UserQuestion": "%userQuestionText%",
              "SMEAnswer": "%answerLineText%"
            }
          }
        ],
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
      }
    },
    {
      "type": "Action.ShowCard",
      "title": "%shareResultsFeedbackButtonText%",
      "card": {
        "type": "AdaptiveCard",
        "style": "emphasis",
        "body": [
          {
            "type": "TextBlock",
            "weight": "bolder",
            "text": "%titleText%",
            "wrap": true
          },
          {
            "type": "TextBlock",
            "weight": "default",
            "text": "%mandatoryFieldText%",
            "wrap": true,
            "color": "Attention"
          },
          {
            "type": "Input.Text",
            "placeholder": "%showCardTitleText%",
            "id": "feedbackUserTitleText",
            "isMultiline": false
          },
          {
            "type": "TextBlock",
            "weight": "bolder",
            "text": "%descriptionText%",
            "wrap": true
          },
          {
            "type": "Input.Text",
            "id": "ResultsFeedback",
            "maxLenght": "300",
            "isMultiline": true,
            "placeholder": "%resultsFeedbackDetails%"
          }

        ],
        "actions": [
          {
            "type": "Action.Submit",
            "title": "%submitButtonText%",
            "data": {
              "msteams": {
                "type": "messageBack",
                "displayText": "%shareFeedbackDisplayText%",
                "text": "ResultsFeedback"
              },
              "UserQuestion": "%userQuestionText%",
              "SMEAnswer": "%answerLineText%"
            }
          }
        ],
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
      }
    }

  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "%customMessage%",
          "wrap": true
        }

      ]
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "%askAnExpertButtonText%",
      "card": {
        "type": "AdaptiveCard",
        "style": "emphasis",
        "body": [
          {
            "type": "TextBlock",
            "weight": "bolder",
            "text": "%titleText%",
            "wrap": true
          },
          {
            "type": "Input.Text",
            "placeholder": "%showcardTitleText%",
            "id": "UserTitleText",
            "isMultiline": true
          },
          {
            "type": "TextBlock",
            "weight": "bolder",
            "text": "%descriptionText%",
            "wrap": true
          },
          {
            "type": "Input.Text",
            "id": "questionForExpert",
            "isMultiline": true,
            "value": "%resultQuestionText%"
          }

        ],
        "actions": [
          {

            "type": "Action.Submit",
            "title": "%askanExpertButtonText%",
            "data": {
              "msteams": {
                "type": "messageBack",
                "displayText": "QuestionForExpert",
                "text": "QuestionForExpert"
              },
              "SMEQuestion": "%resultQuestionText%"
            }

          }
        ],
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "%customMessage%",
          "wrap": true
        }

      ]
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "title": "%askAnExpertButtonText%",
      "card": {
        "type": "AdaptiveCard",
        "style": "emphasis",
        "body": [
          {
            "type": "TextBlock",
            "weight": "bolder",
            "text": "%titleText%",
            "wrap": true
          },
          {
            "type": "TextBlock",
            "weight": "default",
            "text": "%mandatoryFieldText%",
            "wrap": true,
            "color": "Attention"
          },
          {
            "type": "Input.Text",
            "placeholder": "%showcardTitleText%",
            "id": "questionUserTitleText",
            "isMultiline": false
          },
          {
            "type": "TextBlock",
            "weight": "bolder",
            "text": "%descriptionText%",
            "wrap": true
          },
          {
            "type": "Input.Text",
            "id": "questionForExpert",
            "placeholder": "%descriptionPlaceholder%",
            "isMultiline": true
          }

        ],
        "actions": [
          {

            "type": "Action.Submit",
            "title": "%askAnExpertButtonText%",
            "data": {
              "msteams": {
                "type": "messageBack",
                "displayText": "%askAnExpertDisplayText%",
                "text": "QuestionForExpert"
              }
            }

          }
        ],
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
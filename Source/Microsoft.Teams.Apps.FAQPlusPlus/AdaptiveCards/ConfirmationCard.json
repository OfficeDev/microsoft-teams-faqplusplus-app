{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "weight": "bolder",
          "text": "%confirmationCardTitleText%",
          "wrap": true
        },
        {
          "type": "Image",
          "horizontalAlignment": "center",
          "spacing": "small",
          "url": "%cardImageUrl%",
          "size": "large"
        },
        {
          "type": "TextBlock",
          "text": "%confirmationAdaptiveCardContent%",
          "spacing": "medium",
          "wrap": true
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "Image",
                  "spacing": "None",
                  "url": "%cardImageUrl%",
                  "width": "56px",
                  "horizontalAlignment": "Left",
                  "height": "56px"
                }
              ],
              "width": "auto"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "horizontalAlignment": "Left",
                  "size": "Small",
                  "weight": "Bolder",
                  "text": "%welcomeText1%",
                  "spacing": "Small",
                  "wrap": true
                }
              ],
              "width": "auto"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "horizontalAlignment": "Left",
          "spacing": "None",
          "weight": "Bolder",
          "color": "Dark",
          "text": "%messageText1%",
          "wrap": true
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "%bulletFactTitle%",
              "value": "%welcomeMessageBulletText1%"
            },
            {
              "title": "%bulletFactTitle%",
              "value": "%welcomeMessageBulletText2%"
            },
            {
              "title": "%bulletFactTitle%",
              "value": "%welcomeMessageBulletText3%"
            },
            {
              "title": "%bulletFactTitle%",
              "value": "%welcomeMessageBulletText4%"
            }
          ]
        },
        {
          "type": "TextBlock",
          "horizontalAlignment": "Left",
          "spacing": "Small",
          "color": "Dark",
          "text": "%messageText2%",
          "wrap": true
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Take a tour",
      "data": {
        "msteams": {
          "type": "messageBack",
          "displayText": "%takeATourButtonText%",
          "text": "take a tour"
        }
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
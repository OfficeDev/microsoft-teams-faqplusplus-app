{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "weight": "bolder",
          "text": "%incomingTitleText%",
          "color": "Attention"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "%incomingSubtitleText%",
          "wrap": true
        },
        {
          "type": "FactSet",
          "facts": [

            {
              "title": "%titleText%",
              "value": "%userTitleValue%"
            },
            {
              "title": "%descriptionText%",
              "value": "%incomingFeedbackText%"
            },
            {
              "title": "%kbEntryText%",
              "value": "%smeAnswer%"
            },
            {
              "title": "%questionText%",
              "value": "%userQuestionText%"
            },
            {
              "title": "%dateCreatedDisplayFactTitle%",
              "value": "{{DATE(%dateCreatedValue%, SHORT)}} {{TIME(%dateCreatedValue%)}}"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "%chatTextButton%",
      "url": "https://teams.microsoft.com/l/chat/0/0?users=%personUpn%"
    }

  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
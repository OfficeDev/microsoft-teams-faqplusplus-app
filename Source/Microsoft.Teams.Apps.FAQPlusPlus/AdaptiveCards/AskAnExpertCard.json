{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "weight": "bolder",
          "text": "%cardHeader%"
        },
        {
          "type": "TextBlock",
          "text": "%subHeader%",
          "wrap": true,
          "maxLines": 3

        },
        {
          "type": "TextBlock",
          "weight": "bolder",
          "text": "%titleText%",
          "wrap": true
        },
        {
          "type": "Input.Text",
          "placeholder": "%showcardTitleText%",
          "id": "UserTitleText",
          "isMultiline": true
        },
        {
          "type": "TextBlock",
          "weight": "bolder",
          "text": "%descriptionText%",
          "wrap": true
        },
        {
          "type": "Input.Text",
          "id": "questionForExpert",
          "placeholder": "%descriptionPlaceholder%",
          "isMultiline": true
        }
      ]
    }
  ],
  "actions": [
    {

      "type": "Action.Submit",
      "title": "%askAnExpertButtonText%",
      "data": {
        "msteams": {
          "type": "messageBack",
          "displayText": "QuestionForExpert",
          "text": "QuestionForExpert"
        }
      }

    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
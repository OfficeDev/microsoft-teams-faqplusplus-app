{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "weight": "Bolder",
          "text": "%notificationCardTitleText%",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "%notificationAdaptiveCardContent%",
          "spacing": "Small",
          "wrap": true
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "%statusText%",
              "value": "%openStatusValue%"
            },
            {
              "title": "%titleText%",
              "value": "%userTitleValue%"
            },
            {
              "title": "%descriptionText%",
              "value": "%smeQuestion%"
            },
            {
              "title": "%dateCreatedDisplayFactTitle%",
              "value": "{{DATE(%dateCreatedValue%, SHORT)}} {{TIME(%dateCreatedValue%)}}"
            },
            {
              "title": "%closedDisplayFactTitle%",
              "value": "%notApplicable%"
            }
          ]
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
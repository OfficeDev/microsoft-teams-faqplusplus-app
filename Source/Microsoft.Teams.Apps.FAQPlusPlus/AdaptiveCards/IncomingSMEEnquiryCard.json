{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "size": "medium",
          "weight": "bolder",
          "text": "%incomingTitleText%",
          "color": "Attention"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "%incomingSubtitleText%",
          "wrap": true,
          "value": "%dateCreatedValue%"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "%statusFactTitle%",
              "value": "%openStatusValue%"
            },
            {
              "title": "%titleText%",
              "value": "%userTitleValue%"
            },
            {
              "title": "%descriptionText%",
              "value": "%incomingFeedbackText%"
            },
            {
              "title": "%kbEntryText%",
              "value": "%smeAnswer%"
            },
            {
              "title": "%questionText%",
              "value": "%userQuestionText%"
            },
            {
              "title": "%dateCreatedDisplayFactTitle%",
              "value": "{{DATE(%dateCreatedValue%, SHORT)}} {{TIME(%dateCreatedValue%)}}"
            },
            {
              "title": "%closedFactTitle%",
              "value": "%notApplicable%"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "%chatTextButton%",
      "url": "https://teams.microsoft.com/l/chat/0/0?users=%personUpn%"
    },
    {
      "type": "Action.ShowCard",
      "title": "%changeStatusButtonText%",
      "card": {
        "type": "AdaptiveCard",
        "style": "emphasis",
        "body": [
          {
            "type": "Input.ChoiceSet",
            "id": "statuscode",
            "style": "compact",
            "isMultiSelect": false,
            "value": "1",
            "choices": [
              {
                "title": "%assignStatusText%",
                "value": "2"
              },
              {
                "title": "%closeStatusText%",
                "value": "1"
              }
            ]
          }

        ],
        "actions": [
          {
            "type": "Action.Submit",
            "title": "%submitButtonText%",
            "data": {
              "rowKey": "%ticketId%"
            }
          }
        ],
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
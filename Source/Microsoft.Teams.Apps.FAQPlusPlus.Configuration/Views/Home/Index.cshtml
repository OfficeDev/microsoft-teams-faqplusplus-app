@{

    ViewBag.Title = "Configuration App";
}

<div class="row contentMargin">
    <div class="col-lg-12">
        <div class="col-lg-8">
            @Html.Partial("~/Views/Home/_Team.cshtml")
        </div>
    </div>
    <div class="col-lg-12 marginBetweenView">
        <hr />
    </div>
    <div class="col-lg-12">
        <div class="col-lg-8">
            @Html.Partial("~/Views/Home/_KnowledgeBase.cshtml")
        </div>
    </div>
    <div class="col-lg-12 marginBetweenView">
        <hr />
    </div>
    <div class="col-lg-12">
        <div class="col-lg-8">
            @Html.Partial("~/Views/Home/_UpnList.cshtml")
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        //Display team Id if its saved if yes then perform edit UI changes
        $.ajax({
            type: "GET",
            url: '@Url.Action("GetSavedTeamIdAsync")',
            success: function (result) {
                if (result != "") {                //Display the default UI when no team Id results are available for display
                    $("#TeamIdTextBox").val(result);
                    performEditChanges("team");
                }
            },
            error: function () {
                alert("Unable to display team Id");
            }
        });

        //Display knowledgeBase Id if its saved if yes then perform edit UI changes
        $.ajax({
            type: "GET",
            url: '@Url.Action("GetSavedKnowledgeBaseIdAsync")',
            success: function (result) {
                if (result != "") {                //Display the default UI when no knowledge Id results are available for display
                    $("#KnowledgeBaseIdTextBox").val(result);
                    performEditChanges("knowledgebase");
                }
            },
            error: function () {
                alert("Unable to display knowledge base Id");
            }
        });
    });

    // Display a green tick when team Id save is success
    function onTeamSaveSuccess() {
        clearStatusIconAndMessage("team");
        saveSuccessIcon("teamStorageStatusIcon");
        performEditChanges("team");
    }

    // Display a red cross with error text message when team is not saved due to error
    function onTeamSaveFailure(errorText) {
        clearStatusIconAndMessage("team");
        saveFailureIconAndText("teamStorageStatusIcon", "teamStorageStatusMessage", errorText.statusText);
    }


    // Display a green tick when knowledge base Id save is success
    function onKnowledgeBaseSaveSuccess() {
        clearStatusIconAndMessage("knowledgebase");
        saveSuccessIcon("knowledgeBaseStorageStatusIcon");
        performEditChanges("knowledgebase");
    }

    // Display a red cross with error text message when knowledge base is not saved due to error
    function onKnowledgeBaseSaveFailure(errorText) {
        clearStatusIconAndMessage("knowledgebase");
        saveFailureIconAndText("knowledgeBaseStorageStatusIcon", "knowledgeBaseStorageStatusMessage", errorText.statusText);
    }


    // Perform changes when Edit related UI has to be displayed
    function performEditChanges(section) {
        if (section === "team") {
            $("#teamSubmitButton").val("Edit");
            $("#TeamIdTextBox").attr("disabled", "disabled");
        }
        else {
            $("#knowledgeBaseSubmitButton").val("Edit");
            $("#KnowledgeBaseIdTextBox").attr("disabled", "disabled");
        }
    }

    // Provide the div whose icon and color needs to be changed on successful save
    function saveSuccessIcon(storageStatusIcon) {
        $("#" + storageStatusIcon+"").addClass("glyphicon glyphicon-ok");
        $("#" + storageStatusIcon + "").addClass("storageStatusIcon-success");
    }

    // Provide the div whose icon, color and text needs to be changed due to failure while save
    function saveFailureIconAndText(storageStatusIconDiv, storageStatusMessageDiv, errorText) {
        $("#" + storageStatusIconDiv + "").addClass("glyphicon glyphicon-remove");
        $("#" + storageStatusIconDiv + "").addClass("storageStatusIcon-failure");
        $("#" + storageStatusMessageDiv + "").addClass("error-message alert alert-danger");
        $("#" + storageStatusMessageDiv + "").text(errorText);
    }

    // Clear icon and message
    function clearStatusIconAndMessage(section) {
        if (section === "team") {
            $("#teamStorageStatusIcon").removeAttr("class");
            $("#teamStorageStatusMessage").removeAttr("class");
            $("#teamStorageStatusMessage").text("");
        }
        else {
            $("#knowledgeBaseStorageStatusIcon").removeAttr("class");
            $("#knowledgeBaseStorageStatusMessage").removeAttr("class");
            $("#knowledgeBaseStorageStatusMessage").text("");
        }
    }

    // Check if the button text is Edit or Ok then proceed to either form submit or disable team textbox
    $("#teamSubmitButton").click(function () {
        var buttonText = $("#teamSubmitButton").val();
        if (buttonText === "Edit") {
            $("#TeamIdTextBox").removeAttr("disabled");
            $("#teamSubmitButton").val("OK");
        }
        else {
            $("#teamForm").submit();
        }
    });

    // Check for button toggle based on edit or ok and then proceed
    $("#knowledgeBaseSubmitButton").click(function () {
        var buttonText = $("#knowledgeBaseSubmitButton").val();
        if (buttonText === "Edit") {
            $("#KnowledgeBaseIdTextBox").removeAttr("disabled");
            $("#knowledgeBaseSubmitButton").val("OK");
        }
        else {
            $("#knowledgeBaseForm").submit();
        }
    });
</script>
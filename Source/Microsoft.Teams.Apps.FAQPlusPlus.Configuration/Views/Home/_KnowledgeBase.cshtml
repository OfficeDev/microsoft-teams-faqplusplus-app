@model Microsoft.Teams.Apps.FAQPlusPlus.Configuration.Models.KnowledgeBaseViewModel

@using (Ajax.BeginForm("SaveKnowledgeBaseUrlAsync", "Home", new AjaxOptions { HttpMethod = "POST" }))
{
    <div class="form-group">
        <div class="col-lg-3">
            @Html.LabelFor(model => model.KnowledgeBaseUrl, htmlAttributes: new { @class = "font-bold" })
        </div>
        <div class="col-lg-5">
            @Html.TextBoxFor(model => model.KnowledgeBaseUrl, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Knowledge base URL" })
            @Html.ValidationMessageFor(model => model.KnowledgeBaseUrl, "", htmlAttributes: new { @class = "error-message" })
        </div>
        <div class="col-lg-1" style="padding:0px !important;">
            <span id="knowledgeBaseStorageStatusIcon glyphicon"></span>
        </div>
        <div class="col-lg-3">
            <input type="submit" value="OK" class="btn btn-primary" id="knowledgeBaseSubmitButton" />
            <span class="glyphicon glyphicon-info-sign"></span>
        </div>
        <div class="col-lg-offset-3 col-lg-5">
            <div id="knowledgeBaseStorageStatusMessage" class="error-message"></div>
        </div>
    </div>
}
@model Microsoft.Teams.Apps.FAQPlusPlus.Configuration.Models.StaticTabViewModel

@using (Ajax.BeginForm("SaveStaticTabTextAsync", "Home", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onSaveSuccess", OnFailure = "onSaveFailure" }, htmlAttributes: new { @class = "formToSubmit" }))
{
    <div class="form-group" data-form-name="staticTabText">
        <div class="col-lg-3">
            @Html.LabelFor(model => model.StaticTabText, htmlAttributes: new { @class = "font-bold" })
            <span class="mandatoryField">*</span>
        </div>
        <div class="col-lg-5">
            @Html.TextAreaFor(model => model.StaticTabText, htmlAttributes: new { @class = "form-control staticTabTextIdTextBox toggleTextBox", @placeholder = "Enter help tab text, up to 3000 characters. Markdown is supported." })
            @Html.ValidationMessageFor(model => model.StaticTabText, "", htmlAttributes: new { @class = "error-message" })
        </div>
        <div class="col-lg-1">
            <span id="staticTabTextStorageStatusIcon"></span>
        </div>
        <div class="col-lg-3">
            <input type="button" value="OK" class="btn btn-primary toggleToEditButton" id="staticTabTextSubmitButton" />
            <span class="glyphicon glyphicon-info-sign infoSignMargin" data-toggle="tooltip" title="@Strings.StaticTabToolTipHoverMessage"></span>
        </div>
        <div class="col-lg-offset-3 col-lg-5">
            <div id="staticTabTextStorageStatusMessage" class="error-message"></div>
        </div>
    </div>
}
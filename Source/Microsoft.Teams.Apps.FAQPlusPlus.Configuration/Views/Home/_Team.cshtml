@model Microsoft.Teams.Apps.FAQPlusPlus.Configuration.Models.TeamViewModel

@using (Ajax.BeginForm("SaveTeamIdAsync", "Home", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onTeamSaveSuccess", OnFailure = "onTeamSaveFailure" }))
{
    <div class="form-group">
        <div class="col-lg-3">
            @Html.LabelFor(model => model.TeamIdTextBox, htmlAttributes: new { @class = "font-bold" })
            <span class="mandatoryField">*</span>
        </div>
        <div class="col-lg-5">
            @Html.TextBoxFor(model => model.TeamIdTextBox, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Team Id" })
            @Html.ValidationMessageFor(model => model.TeamIdTextBox, "", htmlAttributes: new { @class = "error-message" })
        </div>
        <div class="col-lg-1">
            <span id="teamStorageStatusIcon"></span>
        </div>
        <div class="col-lg-3">
            <input type="submit" value="OK" class="btn btn-primary" id="teamSubmitButton" />
            <span class="glyphicon glyphicon-info-sign infoSignMargin"></span>
        </div>
        <div class="col-lg-offset-3 col-lg-5">
            <div id="teamStorageStatusMessage" class="error-message"></div>
        </div>
    </div>
}
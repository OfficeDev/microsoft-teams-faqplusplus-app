@model Microsoft.Teams.Apps.FAQPlusPlus.Configuration.Models.TeamViewModel

@using (Ajax.BeginForm("SaveOrUpdateTeamIdAsync", "Home", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onTeamSaveSuccess", OnFailure = "onTeamSaveFailure" }, htmlAttributes: new { @class = "formToSubmit" }))
{
    <div class="form-group">
        <div class="col-lg-3">
            @Html.LabelFor(model => model.TeamId, htmlAttributes: new { @class = "font-bold" })
            <span class="mandatoryField">*</span>
        </div>
        <div class="col-lg-5">
            @Html.TextBoxFor(model => model.TeamId, htmlAttributes: new { @class = "form-control teamIdTextBox toggleTextBox", @placeholder = "Enter Team Id" })
            @Html.ValidationMessageFor(model => model.TeamId, "", htmlAttributes: new { @class = "error-message" })
        </div>
        <div class="col-lg-1">
            <span id="teamStorageStatusIcon"></span>
        </div>
        <div class="col-lg-3">
            <input type="button" value="OK" class="btn btn-primary toggleToEditButton" id="teamSubmitButton" />
            <span class="glyphicon glyphicon-info-sign infoSignMargin"></span>
        </div>
        <div class="col-lg-offset-3 col-lg-5">
            <div id="teamStorageStatusMessage" class="error-message"></div>
        </div>
    </div>
}